---
import Layout from "../layouts/Layout.astro";
import VideoCard from "../components/VideoCard.astro";
import type { Video } from "../lib/types";
import Search from "../components/search";

const mode = import.meta.env.MODE;

const websiteId: string = import.meta.env.WEBSITE_ID;

const response = await fetch(
  `http://localhost:3000/api/getAllVideos?websiteId=${websiteId}`
);

const videos: Video[] = await response.json();
---

<Layout title="Welcome to Astro.">
  <main class="min-h-screen w-full flex flex-col">
    <div class="sticky top-0 z-10">
      <nav
        class="navbar bg-base-100 flex flex-col sm:flex-row gap-2 justify-between items-center px-4 py-4 backdrop-blur-sm bg-opacity-70"
      >
        <a class="btn btn-ghost normal-case text-xl">Your Website</a>
        <Search client:visible />
      </nav>
      <div class="h-0.5 bg-primary"></div>
    </div>
    <div class="grow bg-base-300">
      <section
        class="py-8 px-4 grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 items-start gap-8"
      >
        {
          videos.map((video) => (
            <a href={`/${video.id}`}>
              <VideoCard title={video.title} thumbnail={video.thumbnail} />
            </a>
          ))
        }
      </section>
    </div>
  </main>
  <div id="mode" hidden data-mode={mode}></div>
</Layout>

<script>
  import { getLyraDB, search } from "../lib/lyra";

  const mode = document.getElementById("mode")?.dataset.mode;

  const db = await getLyraDB(mode);

  window.search = search;
  window.db = db;
</script>
